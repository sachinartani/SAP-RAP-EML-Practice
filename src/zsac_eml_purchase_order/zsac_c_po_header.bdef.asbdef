{
  use update;
  use delete;

  use association _PurchaseOrderHeader { with draft; }
  use association _PurchaseOrderAccount { create; with draft; }
  use association _PurchaseOrderHistory { create; with draft; }
}

define behavior for ZSAC_C_PO_ACCOUNT //alias <alias_name>
{
  use update;
  use delete;

  use association _PurchaseOrderItem { with draft; }
  use association _PurchaseOrderHeader { with draft; }
}

define behavior for ZSAC_C_PO_HISTORY //alias <alias_name>
{
  use update;
  use delete;

  use association _PurchaseOrderItem { with draft; }
  use association _PurchaseOrderHeader { with draft; }
}